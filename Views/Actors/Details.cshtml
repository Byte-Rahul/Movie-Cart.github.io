@model Actor
@{
    ViewData["Title"] = "Details for Actor";
}

<div class="row text">
    <div class="col-12">
        <p>
            <h1>
                Details for @Model.FullName
            </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
               
                     <div class="form-group text-center">
                    <img id="ProfilePicturePreview" />
                </div>
                <div class="form-group">
                    <label asp-for="ProfilePicureUrl" class="control-label"></label>
                    <input asp-for=ProfilePicureUrl class="form-control" readonly/>
                    <span asp-validation-for="ProfilePicureUrl" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for=FullName class="form-control" readonly/>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for=Bio class="form-control" readonly/>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                         <a class="btn btn-primary float-right" asp-controller="Actors" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    }
                   
                    <a class="btn btn-secondary" asp-action="Index">Back</a>
                </div>

              
               

            </div>

        </div>

    </div>

</div>
@section Scripts{
    <script>
    
    $(document).ready(function() {
        var output = document.getElementById('ProfilePicturePreview');
        output.src = $("#ProfilePicureUrl").val();
    });

    </script>
}


